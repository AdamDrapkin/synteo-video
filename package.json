{
  "name": "synteo-video",
  "version": "1.0.0",
  "description": "Automated short-form video generation for Content Rewards campaigns",
  "type": "module",
  "scripts": {
    "dev": "remotion studio src/index.tsx",
    "build": "remotion render",
    "build:api": "tsc src/api/server.ts --outDir dist/api --esModuleInterop --module nodenext --moduleResolution nodenext --target es2020 --skipLibCheck",
    "start:api": "node dist/api/server.js",
    "lambda": "remotion lambda deploy",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.995.0",
    "@aws-sdk/lib-storage": "^3.995.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@remotion/captions": "^4.0.0",
    "@remotion/cli": "^4.0.0",
    "@remotion/lambda": "^4.0.0",
    "@remotion/lambda-client": "^4.0.0",
    "@remotion/media-utils": "^4.0.0",
    "@remotion/openai-whisper": "^4.0.0",
    "express": "^4.18.0",
    "fluent-ffmpeg": "^2.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remotion": "^4.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
